<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lampstore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LampStore">
        <activity android:name=".view.activity.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.ProfileActivity" />
        <activity android:name=".view.activity.PaymentActivity" />
        <activity android:name=".view.activity.SignUpActivity" />
        <activity android:name=".view.activity.LoginActivity"/>
        <activity android:name=".view.activity.ProductDetailsActivity" />
        <activity android:name=".view.activity.ProductsActivity" />
        <activity android:name=".view.activity.FormActivity" />
        <activity android:name=".view.activity.MainActivity" />
    </application>

</manifest>